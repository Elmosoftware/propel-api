{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "propel-api - Debug APP",
      "program": "${workspaceFolder}/propel-api/index.ts",
      "preLaunchTask": "propel-api - Build",
      "outFiles": [
        "${workspaceFolder}/propel-api/dist/**/*.js"
      ],
      "cwd": "${workspaceFolder}/propel-api",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "propel-api - Debug ALL Test",
      "preLaunchTask": "propel-api - Build",
      "outFiles": [
        "${workspaceFolder}/propel-api/dist/**/*.js"
      ],
      "cwd": "${workspaceFolder}/propel-api",
      "windows": {
        "args": [
          "--inspect-brk",
          "${workspaceRoot}/propel-api/node_modules/jest/bin/jest.js",
          "./dist",
          "--runInBand"   
        ],
      },
      "console": "externalTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "propel-api - Debug current opened Test",
      "preLaunchTask": "propel-api - Build",
      "outFiles": [
        "${workspaceFolder}/propel-api/dist/**/*.js"
      ],
      "cwd": "${workspaceFolder}/propel-api",
      "windows": {
        "args": [
          "--inspect-brk",
          "${workspaceRoot}/propel-api/node_modules/jest/bin/jest.js",
          "--testPathPattern=./dist/[^]+/${fileBasenameNoExtension}.*",
          "--runInBand",
          "--detectOpenHandles"   
        ],
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "propel-shared - Debug ALL Test",
      "preLaunchTask": "propel-shared - Build",
      "outFiles": [
        "${workspaceFolder}/propel-shared/dist/**/*.js"
      ],
      "cwd": "${workspaceFolder}/propel-shared",
      "windows": {
        "args": [
          "--inspect-brk",
          "${workspaceRoot}/propel-shared/node_modules/jest/bin/jest.js",
          "./dist",
          "--runInBand"   
        ],
      },
      "console": "externalTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "propel-shared - Debug current opened Test",
      "preLaunchTask": "propel-shared - Build",
      "outFiles": [
        "${workspaceFolder}/propel-shared/dist/**/*.js"
      ],
      "cwd": "${workspaceFolder}/propel-shared",
      "windows": {
        "args": [
          "--inspect-brk",
          "${workspaceRoot}/propel-shared/node_modules/jest/bin/jest.js",
          "--testPathPattern=./dist/[^]+/${fileBasenameNoExtension}.*",
          "--runInBand",
          "--detectOpenHandles"   
        ],
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}