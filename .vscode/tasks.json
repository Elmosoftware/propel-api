{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "propel-api - Build",
            "type": "typescript",
            "tsconfig": "propel-api/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "propel-shared - Build",
            "type": "typescript",
            "tsconfig": "propel-shared/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "propel-api - Build & Run DEV",
            "type": "shell",
            "dependsOn":["propel-api - Build"],
            "options": { 
                "cwd": "${workspaceFolder}/propel-api"
            },
            "command": "node ./dist/propel-api/index.js"
        },
        {
            "label": "propel-web - Build, Run & Watch DEV",
            "type": "shell",
            "options": { 
                "cwd": "${workspaceFolder}/propel-web"
            },
            "command": "ng serve --port 8080"
        }
    ]
}