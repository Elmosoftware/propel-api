{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "propel-api - Build",
            "type": "typescript",
            "tsconfig": "propel-api/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "propel-shared - Build",
            "type": "typescript",
            "tsconfig": "propel-shared/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "propel-api - Build & Run DEV",
            "type": "shell",
            "dependsOn":["propel-api - Build"],
            "options": { 
                "cwd": "${workspaceFolder}/propel-api/" //workspace mut be this in order 
                //.env file is grabbed. Because .env file is not copied as part of the build process.
            },
            "command": "$env:NODE_ENV='development';node ./dist/propel-api/index.js"
        },
        {
            "label": "propel-web - Build, Run & Watch DEV",
            "type": "shell",
            "options": { 
                "cwd": "${workspaceFolder}/propel-web"
            },
            "command": "ng serve --port 8080"
        },
        {
            "label": "propel-web - Production Build",
            "type": "shell",
            "options": { 
                "cwd": "${workspaceFolder}/propel-web"
            },
            "command": "ng build --prod"
        },
        {
            "label": "Production Build",
            "type": "gulp",
            "task": "productionBuild",
            "problemMatcher": [], 
            "dependsOn":[
                "propel-web - Production Build", 
                "propel-api - Build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/distrib"
            }
        },
        {
            "label": "Production Install",
            "type": "shell",
            "problemMatcher": [], 
            "options": {
                "cwd": "${workspaceFolder}/distrib/dist/propel-api"
            },
            "command": "npm install",
            "dependsOn":[
                "Production Build"
            ]
        },
        {
            "label": "Production Build, Install & RUN",
            "type": "shell",
            "problemMatcher": [], 
            "options": { 
                "cwd": "${workspaceFolder}/distrib/dist/propel-api"
            },
            "command": "$env:NODE_ENV='production';node index.js",
            "dependsOn":[
                "Production Install"
            ]
        }
    ]
}