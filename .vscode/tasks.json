{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build API",
            "type": "typescript",
            "tsconfig": "propel-api/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test API",
            "type": "shell",
            "dependsOn": [
                "Build API"
            ],
            "options": {
                "cwd": "${workspaceFolder}/propel-api/"
            },
            "command": "npm",
            "args": [
                "test"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build SHD",
            "type": "typescript",
            "tsconfig": "propel-shared/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test SHD",
            "type": "shell",
            "dependsOn": [
                "Build SHD"
            ],
            "options": {
                "cwd": "${workspaceFolder}/propel-shared/"
            },
            "command": "npm",
            "args": [
                "test"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run API",
            "type": "shell",
            "dependsOn": [
                "Build API"
            ],
            "options": {
                "cwd": "${workspaceFolder}/propel-api/"
            },
            "command": "$env:NODE_ENV='development';node ./dist/propel-api/index.js",
            "problemMatcher": []
        },
        {
            "label": "Run WEB",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/propel-web"
            },
            "command": "ng serve --port 8080",
            "problemMatcher": []
        },
        {
            "label": "Test WEB",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/propel-web/"
            },
            "command": "npm",
            "args": [
                "test"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build PRODUCTION (WEB Only)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/propel-web"
            },
            "command": "ng build --configuration production --base-href ./"
        },
        {
            "label": "Copy Production Web build",
            "group": "build",
            "type": "gulp",
            "task": "copyWebDist",
            "problemMatcher": [],
            "dependsOn": [
            ],
            "options": {
                "cwd": "${workspaceFolder}/distrib"
            }
        },
        {
            "label": "Cleanup Electron Shell build",
            "group": "build",
            "type": "gulp",
            "task": "cleanUpElectronShellBuild",
            "problemMatcher": [],
            "dependsOn": [
            ],
            "options": {
                "cwd": "${workspaceFolder}/distrib"
            }
        },   
        {
            "label": "Build PRODUCTION (Electron Shell Only)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/propel-shell"
            },
            "command": "npm",
            "args": [
                "run",
                "electronBuild"
            ],
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build PRODUCTION (WEB Only)",
                "Copy Production Web build",
                "Cleanup Electron Shell build"
            ]
        },
        {
            "label": "Build PRODUCTION",
            "group": "build",
            "type": "gulp",
            "task": "productionBuild",
            "problemMatcher": [],
            "dependsOn": [
                "Build PRODUCTION (Electron Shell Only)",
                "Build API"
            ],
            "options": {
                "cwd": "${workspaceFolder}/distrib"
            }
        },
        {
            "label": "Install Production (npm install only)",
            "type": "shell",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/distrib/dist/propel-api"
            },
            "command": "npm install",
            "dependsOn": [
                "Build PRODUCTION"
            ]
        },
        {
            "label": "Run PRODUCTION",
            "type": "shell",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/distrib/dist/propel-api"
            },
            "command": "$env:NODE_ENV='production';node index.js",
            "dependsOn": [
                "Install Production (npm install only)"
            ]
        }
    ]
}